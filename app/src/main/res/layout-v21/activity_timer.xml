        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="100"
        android:progress="3"
        android:progressBackgroundTint="@color/gray"
        android:thumbTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
